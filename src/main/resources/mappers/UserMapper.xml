<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.zacharye.book.dao.UserDao">
    <!-- 根据输入的账号查找用户 -->
    <select id="findUserByLoginName" resultType="com.zacharye.book.entity.User" parameterType="String" >
        SELECT id,login_name,password,nickname,created_time,updated_time
        FROM login_user
        WHERE login_name = #{username}
    </select>
    <!-- 新增用户 -->
    <insert id="addUser" parameterType="com.zacharye.book.entity.User">
        INSERT INTO login_user (login_name,password,nickname,created_time)
        VALUES (#{login_name},#{password},#{nickname},current_timestamp)
    </insert>
</mapper>







